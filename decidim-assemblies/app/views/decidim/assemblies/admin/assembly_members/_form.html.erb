<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="user-fields">
      <div class="row column">
        <%= form.select :existing_user, [[t(".non_user"), false], [t(".existing_user"), true]], label: t(".user_type") %>
      </div>

      <div class="row column user-fields--full-name">
        <%= form.text_field :full_name, autofocus: true %>
      </div>

      <div class="row column user-fields--user-picker">
        <% options = (user = form.object.user.presence) ? [[user.name, user.id]] : [] %>
        <%= form.select :user_id, [], { label: t(".user") }, { data: { search_url: users_assembly_members_url(assembly_slug: @current_assembly.slug),
          options: [{value: user.id, label: user.name, caption: user.nickname}].to_json, items: [user.id].to_json } } %>
      </div>
    </div>

    <div class="position-fields">
      <div class="row column">
        <%= form.select :position, @form.positions_for_select, { include_blank: t(".select_a_position") }, { multiple: false } %>
      </div>

      <div class="row column position-fields--position-other">
        <%= form.text_field :position_other %>
      </div>
    </div>

    <div class="row column">
      <%= form.number_field :weight %>
    </div>

    <div class="row column">
      <%= form.date_field :designation_date %>
    </div>

    <div class="row column">
      <%= form.text_field :designation_mode %>
    </div>

    <div class="row column">
      <%= form.date_field :ceased_date %>
    </div>

    <div class="row column">
      <%= form.select :gender, @form.genders_for_select, { include_blank: t(".select_a_gender") }, { multiple: false } %>
    </div>

    <div class="row column">
      <%= form.date_field :birthday %>
    </div>

    <div class="row column">
      <%= form.text_field :origin %>
    </div>
  </div>
</div>

<%= javascript_include_tag "decidim/assemblies/admin/assembly_members" %>
